<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textColor="#FFFFFF"
    android:background="#205587"
    tools:context="com.example.hp.baza.MainActivity" >

    <TextView
        android:id="@+id/weatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="80dp"
        android:textColor="#FFFFFF"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="@+id/weatherIcon"
        android:layout_toRightOf="@+id/weatherIcon"
        android:textColor="#FFFFFF"
        android:text=""
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:text=""
        android:layout_below="@+id/weatherIcon"
        />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:text=""
        android:layout_below="@+id/temperature"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/update"
        android:onClick="updateData"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:onClick="goToStatistics"
        android:id="@+id/goToStatistics"
        android:layout_below="@+id/update"
        android:layout_alignEnd="@+id/update" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT APP"
        android:id="@+id/about_info"
        android:onClick="displayAbout"
        android:layout_below="@+id/goToStatistics"
        android:layout_alignEnd="@+id/goToStatistics" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/btSwitch"
        android:onClick="connectBtn"
        android:layout_below="@+id/about_info"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/bluetoothStatus"
        android:layout_below="@+id/btSwitch"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="151dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:id="@+id/btSender"

        android:layout_below="@+id/bluetoothStatus"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/messageStatus"
        android:layout_below="@+id/btSender"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="151dp" />

</RelativeLayout>
